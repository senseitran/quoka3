<%= simple_form_for(@message) do |f| %>
  <%= f.error_notification %>

    <div class="form-group">
      <%= f.input :sender_id, as: :hidden, input_html: { class: 'form-control', value: current_user.id } %>
    </div>
    <div class="form-group">
      <div class="control-group select optional message_receiver_id"><label class="select optional control-label" for="message_receiver_id">Receiver</label>
      <div class="controls"><select class="select optional form-control" id="message_receiver_id" name="message[receiver_id]">
      <% @users.each do |user| %>
      <option value="<%= user.id %>"><%= user.account.first_name %></option>
      <% end %>
      </select>
      </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.input :body, input_html: { class: 'form-control' } %>
    </div>

  <div class="form-group">
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>