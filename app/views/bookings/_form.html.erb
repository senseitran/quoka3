<%= simple_form_for(@booking) do |f| %>
  <%= f.error_notification %>

 
    <div class="form-group">
    <%= f.input :date, input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
    <%= f.input :start_time, input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
    <%= f.input :end_time, input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
    <%= f.input :space_id, as: :hidden, input_html: { class: 'form-control', value: @space.id } %>
    </div>

    <div>
    <% if @block %>
    <input class="boolean optional" id="booking_self_booking" name="booking[self_booking]" type="hidden" value="1" />
    <%# f.input :self_booking, as: :string, input_html: { value: 1} %>
    <% else %>
    <input class="boolean optional" id="booking_self_booking" name="booking[self_booking]" type="hidden" value="0" />
    <% end %>
    </div>

    <div class="form-actions">
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
