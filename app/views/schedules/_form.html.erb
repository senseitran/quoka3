<%= simple_form_for(@schedule) do |f| %>
  <%= f.error_notification %>

 
    <div class="form-group">
    <%= f.input :day, as: :hidden, input_html: { class: 'form-control', value: @schedule.day } %>
    </div>
    <div class="form-group">
    <%= f.input :start_time, input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
    <%= f.input :end_time, input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
    <%= f.input :space_id, as: :hidden, input_html: { class: 'form-control' } %>
    </div>

  <div class="form-actions">
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
